@model ImageTest.Models.ImageGallery
@{
    ViewBag.Title = "ImageDetails";
}

<h2>ImageDetails</h2>

<div class="col-sm-10 col-sm-offset-1">

    
    <div class="left">
        <h2> @Html.Action("GetName", "ImageGallery", new { id = Model.UzytkownikId })</h2>
    </div>
    <div class="text-center">
        <img class="img-thumbnail" src="data:image/png;base64,@Convert.ToBase64String(Model.ImageData,0,Model.ImageData.Length)" style="max-width:500px" />
    </div>
    @if (User.IsInRole("Admin"))
    {
    <div class="btn btn-warning text-primary">
         @Html.ActionLink("Usuń zdjęcie", "DeleteImage", new { id = Model.Id }, new { onclick = "return confirm('are you sure?')" }) 
    </div>
    }

</div>

<h3>Comments</h3>

@Html.Action("Create", "Reviews", new { id = Model.Id })
    
@Html.Action("GetReviews", "ImageGallery", new { id = Model.Id })

