@model List<ImageTest.Models.ImageGallery>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Upload")
</p>  

    @foreach (var item in Model)
    {

        <div class="row " style="margin-bottom:100px;">
            @if (item.UzytkownikId != null)
            {
                <h2> @Html.Action("GetName", "ImageGallery", new { id = item.UzytkownikId })</h2>
            }
            <div class="col-sm-6 col-sm-offset-3">
                <img class="img-circle" src="data:image/png;base64,@Convert.ToBase64String(item.ImageData,0,item.ImageData.Length)" width="300" height="300" />
            </div>
        </div>
    }
       


